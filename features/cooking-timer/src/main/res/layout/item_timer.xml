<?xml version="1.0" encoding="utf-8"?>
<!--
    Timer list item layout demonstrating:
    - MaterialCardView for elevation and click feedback
    - ConstraintLayout for complex positioning
    - Progress indicator
    - Multiple action buttons
-->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true"
    app:cardElevation="2dp"
    app:cardCornerRadius="12dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Timer Name -->
        <TextView
            android:id="@+id/textViewTimerName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            app:layout_constraintEnd_toStartOf="@id/textViewStatus"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Pasta Timer" />

        <!-- Status Badge -->
        <TextView
            android:id="@+id/textViewStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceLabelSmall"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Running"
            tools:textColor="@color/timer_status_running" />

        <!-- Description -->
        <TextView
            android:id="@+id/textViewTimerDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:textColor="?attr/colorOnSurfaceVariant"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewTimerName"
            tools:text="Cook pasta until al dente" />

        <!-- Progress Bar -->
        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progressBarTimer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:trackCornerRadius="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textViewTimerDescription"
            tools:progress="45" />

        <!-- Time Display -->
        <TextView
            android:id="@+id/textViewRemainingTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAppearance="?attr/textAppearanceHeadlineMedium"
            android:textStyle="bold"
            android:fontFamily="monospace"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/progressBarTimer"
            tools:text="05:32" />

        <TextView
            android:id="@+id/textViewTotalDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:textColor="?attr/colorOnSurfaceVariant"
            app:layout_constraintBaseline_toBaselineOf="@id/textViewRemainingTime"
            app:layout_constraintStart_toEndOf="@id/textViewRemainingTime"
            tools:text="/ 08:00" />

        <!-- Action Buttons -->
        <LinearLayout
            android:id="@+id/layoutActions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/progressBarTimer">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonStart"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="@string/start"
                android:padding="0dp"
                app:icon="@drawable/ic_play"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                style="@style/Widget.Material3.Button.IconButton.Filled.Tonal" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonPause"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="4dp"
                android:contentDescription="@string/pause"
                android:padding="0dp"
                app:icon="@drawable/ic_pause"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                style="@style/Widget.Material3.Button.IconButton.Filled.Tonal" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonReset"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="4dp"
                android:contentDescription="@string/reset"
                android:padding="0dp"
                app:icon="@drawable/ic_reset"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                style="@style/Widget.Material3.Button.IconButton.Outlined" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonDelete"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="4dp"
                android:contentDescription="@string/delete"
                android:padding="0dp"
                app:icon="@drawable/ic_delete"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconTint="@color/error"
                style="@style/Widget.Material3.Button.IconButton.Outlined" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>

